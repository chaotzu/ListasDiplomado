<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent">

<ImageView
    android:id="@+id/contactImageView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="19dp"
    android:layout_marginStart="19dp"
    android:layout_marginTop="18dp"
    app:srcCompat="@mipmap/ic_launcher"/>

<TextView
    android:id="@+id/nameTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/contactImageView"
    android:layout_marginLeft="38dp"
    android:layout_marginStart="38dp"
    android:layout_marginTop="12dp"
    android:layout_toEndOf="@+id/contactImageView"
    android:layout_toRightOf="@+id/contactImageView"
    android:text="TextView"/>

<TextView
    android:id="@+id/schoolTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/contactImageView"
    android:layout_alignEnd="@+id/nameTextView"
    android:layout_alignRight="@+id/nameTextView"
    android:text="TextView"/>
</RelativeLayout>